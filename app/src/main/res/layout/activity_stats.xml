<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inf8405.outdoorfishingstats.StatsActivity"
    android:background="@drawable/bg"
    android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_the_fish_category_name"
        android:layout_weight="1"/>

    <Spinner
        android:id="@+id/fish_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/fish_arrays"
        android:prompt="@string/fish_prompt"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/stats_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stats_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stats_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stats_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stats_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />

    <TextView
        android:id="@+id/fish_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1" />
</LinearLayout>
